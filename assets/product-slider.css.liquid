/* Custom CSS - START */
.cc-featured-collection {
  background-color: white;
  padding: 80px 0px;
  border-radius: 6px;
  .section{
    margin: 0;
  }
  .slider__grid{
    overflow: scroll;
    overflow-y: hidden;
    scrollbar-width: none;
    transition: transform 0.2s ease-in-out;
  }
  .slider__item{
    transition: opacity 0.5s ease, transform 0.5s ease;
  }
  .slider__item.remove{
    opacity: 0;
    transform: translateY(-20px);
    height: 0;
  }

  .slider__grid::-webkit-scrollbar{
    display: none;
  }

  .scrollbar {
    position: absolute;
    bottom: 0px;
    left: 0;
    right: 0;
    height: 4px;
    background-color: #DDD6D7;
    border-radius: 5px;
    width: 92%;
  }
  .scrollbar:hover{
    height: 6px;
  }
  
  .thumb {
    height: 100%;
    width: 100px;
    background-color: #231F20;
    border-radius: 5px;
    cursor: pointer;
    position: absolute;
  }    
  

  .os-scrollbar-horizontal {
    right: calc(var(--gutter) * 1) !important;
    left: calc(var(--gutter) * 1) !important;
  }
}

.cc-featured-collection .section__heading {
  font-family: 'Source Serif Bold';
}
