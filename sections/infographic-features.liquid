{% comment %}
  File: sections/wellness-benefits.liquid
{% endcomment %}

<section class="bg-white py-16">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center justify-center gap-12">
      <!-- Left Cards -->
      <div class="flex flex-col gap-4">
        {% for block in section.blocks %}
          {% if block.settings.position == 'left' %}
            <div class="bg-black text-white p-4 rounded-lg w-52 text-center shadow-md">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: width: 40 }}" alt="Icon" class="mx-auto mb-2 w-8 h-8 object-contain" />
              {% endif %}
              <p class="text-sm">{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Center Image + Header -->
      <div class="relative w-80">
        <div class="bg-black text-white text-center p-4 rounded-t-full rounded-b-md">
          <p class="font-semibold text-sm">{{ section.settings.heading }}</p>
          <p class="text-xs mt-1">{{ section.settings.subheading }}</p>
        </div>
        <div class="relative z-10">
          {% if section.settings.center_image %}
            <img src="{{ section.settings.center_image | image_url: width: 400 }}" alt="Center Image" class="w-full object-cover rounded-b-md" />
          {% endif %}
        </div>
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <p class="text-pink-300 text-3xl font-semibold opacity-20 text-center leading-tight">
            {{ section.settings.overlay_text }}
          </p>
        </div>
      </div>

      <!-- Right Cards -->
      <div class="flex flex-col gap-4">
        {% for block in section.blocks %}
          {% if block.settings.position == 'right' %}
            <div class="bg-black text-white p-4 rounded-lg w-52 text-center shadow-md">
              {% if block.settings.icon %}
                <img src="{{ block.settings.icon | image_url: width: 40 }}" alt="Icon" class="mx-auto mb-2 w-8 h-8 object-contain" />
              {% endif %}
              <p class="text-sm">{{ block.settings.text }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Infographic Features",
  "settings": [
    {
      "type": "image_picker",
      "id": "center_image",
      "label": "Center Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "BEST FOR?"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Aminoacids, Electrolytes, Vitamins & Minerals"
    },
    {
      "type": "text",
      "id": "overlay_text",
      "label": "Background Overlay Text",
      "default": "RECOVER. RESTORE. RECOVER. RESTORE."
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Benefit Card",
      "settings": [
        {
          "type": "select",
          "id": "position",
          "label": "Card Position",
          "default": "left",
          "options": [
            { "value": "left", "label": "Left" },
            { "value": "right", "label": "Right" }
          ]
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Card Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Card Text",
          "default": "Your Benefit"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Infographic Features",
      "category": "Custom"
    }
  ]
}
{% endschema %}
